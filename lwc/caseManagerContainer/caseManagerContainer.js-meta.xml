<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Case Manager Container</masterLabel>
    <description>Main orchestrator for unified case management system. Manages wizard flow (Caller, Intent, Details, Review) and displays persistent panels (highlight strip + action messages).</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="caseId" type="String" label="Case ID" description="Case ID (for edit/view mode)" />
            <property name="mode" type="String" default="view" label="Mode" description="Component mode: create, edit, view" />
        </targetConfig>
        <targetConfig targets="lightning__AppPage">
            <property name="caseId" type="String" label="Case ID" description="Case ID (for edit/view mode)" />
            <property name="mode" type="String" default="view" label="Mode" description="Component mode: create, edit, view" />
        </targetConfig>
        <targetConfig targets="lightning__HomePage">
            <property name="mode" type="String" default="create" label="Mode" description="Component mode: create, edit, view" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
