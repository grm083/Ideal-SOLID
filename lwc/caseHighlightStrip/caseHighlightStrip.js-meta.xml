<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Case Highlight Strip</masterLabel>
    <description>Horizontal strip layout displaying key case fields with color coding for status (complete, warning, missing). Click any field to edit. Replaces CustomCaseHighlightPanel.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="caseId" type="String" label="Case ID" description="Case ID (required)" />
        </targetConfig>
        <targetConfig targets="lightning__AppPage">
            <property name="caseId" type="String" label="Case ID" description="Case ID (required)" />
        </targetConfig>
        <targetConfig targets="lightning__HomePage">
            <property name="caseId" type="String" label="Case ID" description="Case ID (required)" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
